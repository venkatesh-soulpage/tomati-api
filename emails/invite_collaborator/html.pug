extends layout

block content
  h1 Hi, #{email},
  p
    | You have been invited to join Tomati as a Outlet Collaborator.
    | To find out more about your role visit our
    a(href=supportUrl)  FAQ.
  br
  p
    | This invitation will expire in 72 hours. Click sign up below to finish your account set up.
  // Action
  br
  b.f-fallback.sub="Tomati Support Team"

  table.body-action(align='center', width='100%', cellpadding='0', cellspacing='0', role='presentation')
    tbody
      tr
        td(align='center')
          //
            Border based button
            https://litmus.com/blog/a-guide-to-bulletproof-buttons-in-email-design
          table(width='100%', border='0', cellspacing='0', cellpadding='0', role='presentation')
            tbody
              tr
                td(align='center')
                  a.f-fallback.button(href=signupUrl, target='_blank') Signup
  p
    strong 
    |   Visit our help 
    a(href=supportUrl)  articles
    |  for full introduction into using Tomati or reach out to us at 
    a(href='mailto:hello@tomati.app') hello@tomati.app
  // Sub copy
  table.body-sub(role='presentation')
    tbody
      tr
        td
          p.f-fallback.sub
            | If the signup button doesn't work, you can also copy and paste the link below into your browser.
          p.f-fallback.sub=signupUrl